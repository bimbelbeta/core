{
	"name": "@bimbelbeta/auth",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		},
		"./*": {
			"types": "./dist/*.d.mts",
			"import": "./dist/*.mjs",
			"require": "./dist/*.cjs"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"auth:generate": "bunx @better-auth/cli@latest generate --output ../db/src/schema/auth.ts --config ./src/index.ts --yes",
		"check-types": "tsgo --noEmit"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"@bimbelbeta/config": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@bimbelbeta/db": "workspace:*",
		"arktype": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"resend": "^6.6.0"
	}
}
