{
	"name": "bimbelbeta",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.11.4",
			"@orpc/server": "^1.13.4",
			"@orpc/openapi": "^1.13.4",
			"@orpc/arktype": "^1.13.4",
			"better-auth": "^1.4.16",
			"dotenv": "^17.2.2",
			"drizzle-orm": "^0.45.1",
			"arktype": "^2.1.29",
			"typescript": "^5.9.3",
			"midtrans-client": "^1.4.3",
			"tsdown": "^0.18.4",
			"@orpc/client": "^1.13.4"
		}
	},
	"scripts": {
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"build:packages": "turbo build --filter='./packages/*'",
		"dev:packages": "turbo dev --filter='./packages/*'",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @bimbelbeta/db db:push",
		"db:studio": "turbo -F @bimbelbeta/db db:studio",
		"db:generate": "turbo -F @bimbelbeta/db db:generate",
		"db:migrate": "turbo -F @bimbelbeta/db db:migrate",
		"db:start": "turbo -F @bimbelbeta/db db:start",
		"db:watch": "turbo -F @bimbelbeta/db db:watch",
		"db:stop": "turbo -F @bimbelbeta/db db:stop",
		"db:down": "turbo -F @bimbelbeta/db db:down",
		"db:seed": "turbo -F @bimbelbeta/db db:seed",
		"db:reset": "turbo -F @bimbelbeta/db db:reset",
		"auth:generate": "turbo -F @bimbelbeta/auth auth:generate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"typescript": "^5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "^1.3.6",
		"shadcn": "^3.7.0",
		"turbo": "^2.7.4"
	},
	"packageManager": "bun@1.3.2"
}
